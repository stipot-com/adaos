# Docker Compose project configuration
COMPOSE_PROJECT_NAME=inimatic

# Runtime mode and diagnostics
PRODUCTION=1                  # 1 - container/docker env, 0 - local standalone
HOST=0.0.0.0                  # Interface to bind HTTPS listener
PORT=3030                     # HTTPS port exposed by backend
BACKEND_DEFAULT_LOCALE=en     # Default language for API responses (en|ru)
DEBUG_ENDPOINTS=false         # Enable unauthenticated /v1/debug/* endpoints when true

# Root API bootstrap / owner token used by /v1/bootstrap_token
ROOT_TOKEN=dev-root-token

# Forge / Git integration
FORGE_GIT_URL=git@github.com:stipot-com/adaos-forge.git
FORGE_REPO=stipot-com/adaos-forge    # owner/repo for GitHub App operations
FORGE_WORKDIR=/data/forge            # directory inside container for git checkout
FORGE_GIT_AUTHOR_NAME=AdaOS Root
FORGE_GIT_AUTHOR_EMAIL=root@inimatic.local
FORGE_SSH_KEY=/run/inimatic/secrets/forge_ssh_key  # optional SSH key for Forge access

# GitHub App credentials (optional, required for PAT-free Forge access)
GH_APP_ID=
GH_APP_INSTALLATION_ID=
GH_APP_PRIVATE_KEY_FILE=/run/inimatic/secrets/gh_app_private_key.pem

# AdaOS bridge (backend -> local hub)
ADAOS_BASE=http://127.0.0.1:8777
ADAOS_TOKEN=dev-local-token

# Certificate material: either provide *_PEM or *_PEM_FILE
CA_KEY_PEM_FILE=/run/inimatic/secrets/ca.key
CA_CERT_PEM_FILE=/run/inimatic/secrets/ca.crt
TLS_KEY_PEM_FILE=/run/inimatic/secrets/server.key
TLS_CERT_PEM_FILE=/run/inimatic/secrets/server.crt
# Inline PEM overrides (optional)
#CA_KEY_PEM=
#CA_CERT_PEM=
#TLS_KEY_PEM=
#TLS_CERT_PEM=

# Development certificate defaults (used by dev docker-compose profile)
DEV_CA_KEY_FILE=./deployment/dev-secrets/ca.key
DEV_CA_CERT_FILE=./deployment/dev-secrets/ca.crt
DEV_TLS_KEY_FILE=./deployment/dev-secrets/server.key
DEV_TLS_CERT_FILE=./deployment/dev-secrets/server.crt

# Frontend build configuration
FRONTEND_BUILD_SCRIPT=buildprod

# Optional Redis/Traefik settings
LE_EMAIL=admin@inimatic.com

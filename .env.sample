# === Core runtime settings ===
ENV_TYPE=dev
# Default UI/CLI language (en|ru)
ADAOS_LANG=en
# Active AdaOS profile name
ADAOS_PROFILE=default
# Override base directory (absolute path); empty -> auto
ADAOS_BASE_DIR=
# Optional suffix for .adaos directory in dev mode
ADAOS_BASE_DIR_SUFFIX=
# Force base dir (fallback when ADAOS_BASE_DIR not set)
BASE_DIR=

ROOT_TOKEN=dev-root-token
BOT_ID=adaos_bot

# === Logging & diagnostics ===
# Print stack traces in CLI on failure when set to 1/true
ADAOS_CLI_DEBUG=0
ADAOS_LOG_LEVEL=DEBUG
# Scenario execution log level
ADAOS_SCENARIO_LOG_LEVEL=INFO
# Enable testing shortcuts/mocks when 1
ADAOS_TESTING=0
# Optional file path toggled when services become ready
ADAOS_READY_PATH=

# === Build metadata overrides ===
# Optional override for Git-derived build version (set in CI)
ADAOS_BUILD_VERSION=
# Optional override for build timestamp (ISO8601)
ADAOS_BUILD_DATE=
# Base semantic version used when deriving build numbers
ADAOS_BASE_VERSION=0.1.0

# === SDK / skills configuration ===
# Comma-separated modules allowed for SDK exporter override
ADAOS_SDK_EXPORT_MODULES=
# Path to custom skill environment (venv)
ADAOS_SKILL_ENV_PATH=
# Prefix for on-demand skill test virtualenvs
ADAOS_SKILL_TEST_ENV_PREFIX=
# Allow overriding monorepo URLs/branches when 1
ADAOS_ALLOW_UNSAFE_MONOREPO=0
# Custom skills monorepo URL (requires unsafe override)
ADAOS_SKILLS_MONOREPO_URL=
# Custom skills branch (requires unsafe override)
ADAOS_SKILLS_MONOREPO_BRANCH=
# Custom scenarios monorepo URL (requires unsafe override)
ADAOS_SCENARIOS_MONOREPO_URL=
# Custom scenarios branch (requires unsafe override)
ADAOS_SCENARIOS_MONOREPO_BRANCH=

# === Testing / sandbox ===
# Minimum Python version required for tests
ADAOS_MIN_PY=3.11
# Specific Python executable for tests (e.g. python3.11)
ADAOS_TEST_PY=
# Disable sandbox execution when 1 (unsafe)
ADAOS_SANDBOX_DISABLED=0

# === Gateway / API integration ===
ADAOS_BASE=http://127.0.0.1:8777 # Base URL for local AdaOS API bridge
ADAOS_TOKEN=dev-local-token      # X-AdaOS-Token used for local API calls
ADAOS_CMD=           # Override AdaOS launch command (CLI/testing helpers)
ADAOS_GW_PORT=8777   # Gateway port exposed by local AdaOS bridge
ADAOS_TARGET_HOST=127.0.0.1      # Hostname of AdaOS target when tunneling traffic
ADAOS_TARGET_PORT=8777           # Target port of AdaOS when tunneling traffic

# === Voice assistants / speech ===
ADAOS_RHASSPY_URL=http://127.0.0.1:12101 # Rhasspy base URL
ADAOS_RHASSPY_CONTAINER=adaos-rhasspy    # Docker container name for Rhasspy helper
ADAOS_RHASSPY_IMAGE=rhasspy/rhasspy:latest
ADAOS_RHASSPY_PORT=12101     # Host port for Rhasspy web UI/API
ADAOS_RHASSPY_PROFILE=en     # Rhasspy profile/language
ADAOS_RHASSPY_DATA=~/.config/rhasspy     # Host directory for Rhasspy data
ADAOS_VOSK_MIRROR=           # Optional mirror URL for Vosk models
ADAOS_VOSK_ZIP=  # Local path or URL to pre-downloaded Vosk archive

# === Messaging / storage ===
MQTT_HOST=mqtt       # MQTT broker hostname
MQTT_PORT=1883       # MQTT broker port
SQLITE_PATH=/app/skill_db.sqlite # Path to SQLite database with skills metadata

# === Git identity ===
GIT_USER=adaos       # Default git author name for generated commits
GIT_EMAIL=adaos@local# Default git author email

# === Platform specific (auto-detected if unset) ===
KIVY_BUILD=          # Internal flag used by Kivy packaging (android)
LOCALAPPDATA=        # Windows-specific override for local data path

# NLU
ADAOS_INTERPRETER_AUTOTRAIN=1